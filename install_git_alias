#/bin/bash

git config --global core.pager "diff-so-fancy | less --tabs=4 -RFX"

git config alias.graph "log --pretty=format:'%h: %s' --topo-order --graph"
git config alias.ls "diff-tree --no-commit-id --name-only -r"
git config alias.ll "log --pretty=\"format:%Cred%h%Creset %C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset\" --abbrev-commit --date=relative"
git config alias.lll "whatchanged -1"
git config alias.logl "log --name-status"
git config alias.logg "log --decorate=short --graph"
git config alias.logs "log --format=oneline"
git config alias.logsu "log --format=oneline --author='Daniel Krauthgamer'"
git config alias.dt difftool
git config alias.mt mergetool
git config alias.co checkout
git config alias.a "add -u ."
git config alias.st status
git config alias.cp cherry-pick
git config alias.unstage "reset HEAD --"
git config alias.b "!git for-each-ref --sort='-authordate' --format='%(authordate)%09%(objectname:short)%09%(refname)' refs/heads | sed -e 's-refs/heads/--'"

# list aliases
git config alias.la "!git config -l | grep alias | cut -c 7-"



